<?xml version="1.0" encoding="UTF-8"?>
<Configuration name="TU LOD Dao logging" status="warn" strict="false">
    <Properties>
        <Property name="debugLogFile">logs/debug.log</Property>
    </Properties>
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{ISO8601} %-5p %c{2} - %m%n"/>
        </Console>
        <File name="DebugLoggerFile" fileName="${debugLogFile}">
            <PatternLayout pattern="%d{ISO8601} %-5p %c{2} - %m%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Logger name="at.ac.tuwien.lod" level="debug"/>

        <Root level="warn">
            <AppenderRef ref="console"/>
            <AppenderRef ref="DebugLoggerFile"/>
        </Root>
    </Loggers>
</Configuration>
